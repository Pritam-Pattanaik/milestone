# =================================
# MILESTONE - Environment Variables
# =================================

# Database (Neon PostgreSQL)
DATABASE_URL="postgresql://user:password@host.neon.tech/milestone?sslmode=require"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-refresh-token-secret-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Google Gemini AI
GEMINI_API_KEY="your-gemini-api-key"

# Microsoft Teams Webhooks
TEAMS_MANAGER_WEBHOOK_URL="https://outlook.office.com/webhook/your-manager-webhook"
TEAMS_ADMIN_WEBHOOK_URL="https://outlook.office.com/webhook/your-admin-webhook"

# ClickUp Integration (Optional)
CLICKUP_API_TOKEN=""
CLICKUP_TEAM_ID=""

# File Storage
FILE_STORAGE_TYPE="local"
FILE_UPLOAD_PATH="./uploads"
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="pdf,doc,docx,png,jpg,jpeg,zip"

# AWS S3 (Production)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET=""
AWS_REGION="us-east-1"

# Application
NODE_ENV="development"
PORT=5000
FRONTEND_URL="http://localhost:5173"

# Rate Limiting
RATE_LIMIT_EMPLOYEE=100
RATE_LIMIT_MANAGER=500
RATE_LIMIT_ADMIN=1000

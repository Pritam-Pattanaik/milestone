{
  "name": "milestone",
  "version": "1.0.0",
  "description": "Milestone - Digital Standup Portal: Every day is a milestone",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "start": "cd server && npm start",
    "vercel-build": "cd server && npx prisma generate && cd ../client && npm run build",
    "db:migrate": "cd server && npx prisma migrate dev",
    "db:generate": "cd server && npx prisma generate",
    "db:studio": "cd server && npx prisma studio",
    "db:seed": "cd server && npx prisma db seed",
    "test": "npm run test:server && npm run test:client",
    "test:server": "cd server && npm test",
    "test:client": "cd client && npm test"
  },
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "express": "^4.21.0",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "dotenv": "^16.4.5",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prisma": "^5.20.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}